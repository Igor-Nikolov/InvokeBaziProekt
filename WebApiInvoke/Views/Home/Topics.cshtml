@{
    ViewBag.Title = "Topics";
}

<div class="row">
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Topic name</th>
                    <th>Description</th>
                    <th>Date with time</th>

                </tr>
            </thead>

            <tbody id="tableBody"></tbody>

        </table>
    </div>

    <div class="col-md-4">
        <form class="form-horizontal">


            <div class="form-group">
                <label for="achTitle" class="col-sm-2 control-label">Topics name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="tname" placeholder="Topics name">
                </div>
            </div>

            <div class="form-group">
                <label for="achTitle" class="col-sm-2 control-label">Description</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="tdes" placeholder="Description">
                </div>
            </div>

            <div class="form-group">
                <label for="achTitle" class="col-sm-2 control-label">Date</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="tdate" placeholder="Date">
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" id="addTopic" class="btn btn-success">Add</button>
                </div>
            </div>

        </form>

    </div>

</div>





@section scripts{
    <script>

        $(function () {
            $.get("/api/Topics", function (data) {
                console.log(data);

                var tableBody = $("#tableBody");

                $.each(data, function (index, value) {
                    var tr = $("<tr></tr>");

                    var td = $("<td >" + value.TopicName + " </td>");
                    tr.append(td);

                    td = $("<td >" + value.TopicDescription + " </td>");
                    tr.append(td);

                    td = $("<td >" + value.TopicDateTime + " </td>");
                    tr.append(td);


                    tableBody.append(tr);

                });

            });


            $("#addTopic").on("click", function () {
                var topic = {};

                topic.TopicName = $("#tname").val();

                topic.TopicDescription = $("#tdes").val();

                topic.TopicDateTime = $("#tdate").val();

                console.log(topic);

                $.post("/api/Topics", topic, function (data) {
                    console.log(data);
                    location.reload();
                });

            })
        });

    </script>

}
