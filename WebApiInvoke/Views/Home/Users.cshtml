    <div class="container" style="width:40%;margin-top:10%;">
        <div class="login_fail alert-danger">
        </div>
        <form class="well visible" id="loginForm" method="POST">

            <div class="row form-group">
                <label for="#username" id="username-label" class="col-md-3 col-lg-3 col-sm-12 col-xs-12 col-form-label">Username</label>
                <div class="col-md-9 col-lg-9 col-sm-12 col-xs-12">
                    <input type="text" id="username" class="form-control" placeholder="Username">
                </div>
            </div>
            <div class="row form-group">
                <label for="#password" id="password-label" class="col-md-3 col-lg-3 col-sm-12 col-xs-12 col-form-label">Password</label>
                <div class="col-md-9 col-lg-9 col-sm-12 col-xs-12">
                    <input type="password" id="Password" class="form-control" placeholder="Password">
                </div>
            </div>
            <div class="row form-group">
                <form>
                    <div class="col-md-5 col-lg-5 col-sm-12 col-xs-12">
                        <button type="submit" class="btn btn-block " id="login">
                            Login
                        </button>
                    </div>

                </form>
                <form action="/Home/Register">

                    <div class="col-md-offset-1 col-md-5 col-lg-offset-1 col-lg-5 col-sm-12 col-xs-12">
                        <button class="btn btn-block" id="showSignUp">
                            Sign up
                        </button>
                    </div>
                </form>
            </div>
        </form>

    </div>


</body>

</html>


@section scripts{
     <script>

         $(function () {



