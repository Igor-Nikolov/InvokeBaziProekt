@{
    ViewBag.Title = "Forums";
}

<div class="row">
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Game</th>
                </tr>
            </thead>

            <tbody id="tableBody"></tbody>

        </table>
    </div>

    <div class="col-md-4">
        <form class="form-horizontal">
            <div class="form-group">
                <label for="ForumName" class="col-sm-2 control-label">ForumName</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="forumName" placeholder="Forum Name">
                </div>
            </div>

            @*<div class="form-group">
                <label for="ForumDate" class="col-sm-2 control-label">ForumDate</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="ForumDate" placeholder="Date">
                </div>
            </div>*@

            <div class="form-group">
                <label for="gameName" class="col-sm-2 control-label">GameName</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="gameName" placeholder="GameName">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" id="addForum" class="btn btn-success">Add</button>
                </div>
            </div>

        </form>

    </div>

</div>





@section scripts{
    <script>

        $(function () {
            $.get("/api/Forums", function (data) {
                console.log(data);

                var tableBody = $("#tableBody");

                $.each(data, function (index, value) {
                    var tr = $("<tr></tr>");

                    var td = $("<td >" + value.ForumName + " </td>");
                    tr.append(td);

                    td = $("<td >" + value.ForumDateTime + " </td>");
                    tr.append(td);

                    td = $("<td >" + value.GameName + " </td>");
                    tr.append(td);

                    tableBody.append(tr);

                });

            });


            $("#addForum").on("click", function () {
                var forum = {};
                forum.ForumName = $("#forumName").val();
              //  forum.Email = $("#ForumDate").val();
                forum.GameName = $("#gameName").val();
                
                console.log(forum);

                $.post("/api/Forums", forum, function (data) {
                    console.log(data);
                    location.reload();
                });

            })
        });

    </script>

}
